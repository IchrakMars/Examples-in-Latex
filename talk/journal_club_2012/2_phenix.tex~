%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\subsection*{Elliptic Flow}
\begin{frame}
\frametitle{Collectivity of the Matter \footnote{\tiny{Bethke (2009), [nuc-ex] 0608033.}}}


\begin{block}{Matter Collectivity measured by the collective flow}
{\small
 \begin{equation*}
  \nu_2  = \langle \frac{p_x^2- p_y^2}{p_T^2}\rangle.
 \end{equation*}
\begin{center}
\fcolorbox{white}{white}{\includegraphics[scale=0.2]{figs/elli.png}} \\
\bigskip
{\scriptsize Azimuthal p-space aniosotropy of particle emission for non-central collisions.}
\end{center}
}
\end{block}
\end{frame}


